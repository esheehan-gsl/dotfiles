[user]
  name = W. Evan Sheehan
	email = darth_mall+github@pm.me
[alias]
  st = status -s -b
  ci = commit --verbose
  co = checkout
  graph = log --graph --decorate --oneline
  sup = submodule update --remote
	l = log --oneline
	lp = !git branch --merged | grep -v \"^*\" | xargs git branch -d
[push]
  default = simple
	autoSetupRemote = true
[core]
  editor = $EDITOR
  pager = delta
[diff]
  colorMoved = default
  submodule = log
	colorMoved = default
[config]
  rebase = false
[pull]
	rebase = false
[init]
	defaultBranch = main
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[delta]
  syntax-theme = Nord
  plus-style = "'#3b4252' '#a3be8c'"
  minus-style = "'#e5e9f0' '#bf616a'"
  navigate = true
  light = false